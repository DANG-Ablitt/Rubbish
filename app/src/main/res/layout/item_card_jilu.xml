<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/cart_goto_shop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_source_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/shop_ico"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/s_jr_ico"
            android:text="喜玛拉亚店"
            android:textColor="@color/grey_color2"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:background="#F05448"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/avatar0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/avatar"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="商品：水杯"/>
        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:textColor="#ddffffff"
            android:text="数量：1"/>
        <TextView
            android:id="@+id/tv_singerv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:textColor="#ddffffff"
            android:text="价格：200积分"/>
        <TextView
            android:id="@+id/tv_singervv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:textColor="#ddffffff"
            android:text="时间：2019-6-23"/>
    </LinearLayout>



    </RelativeLayout>




  </LinearLayout>