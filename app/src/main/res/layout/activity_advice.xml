<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/include1"
        layout="@layout/include_actionbar_bo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey1">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/advice_textview_textHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:text="我们懂得聆听，知错就改，您的意见是" />

        <MultiAutoCompleteTextView
            android:layout_marginTop="5dp"
            android:id="@+id/advice_multiAutoCompleteTextView1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textSize="12sp"
            android:gravity="top"
            android:background="@color/white1"
            android:ems="10" />

        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/advice_textView_textphone_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey"
            android:text="请留下您的手机号，以便我们联系您" />

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/advice_editText_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="16sp"
            android:background="@color/white1"
            android:inputType="phone" >

            <requestFocus />
        </EditText>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/advice_btn_tijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bandcard_selector" />
    </LinearLayout>
</LinearLayout>